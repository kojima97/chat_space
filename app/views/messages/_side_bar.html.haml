.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name 
        = current_user.name
      .icons 
        = link_to new_group_path do
          = icon('fa', 'edit')

        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon-cog')

        
        
  .side-bar__group-list
    .list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group
            .group-name 
              = group.name
            .message 
              = group.show_last_message
          
